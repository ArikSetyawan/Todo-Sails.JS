<br />
<div class="container">
  <h1 class="text-center">Profile</h1>
  <img
    src="http://127.0.0.1:1337/files/?filename=<%= data_user.photo %>"
    alt=""
    height="400"
    width="700"
  />
  <br /><button
    type="button"
    class="btn btn-primary"
    data-toggle="modal"
    data-target="#exampleModal"
  >
    Change Photo
  </button>
  <% if(data_user.photo !== "user_profile_default.png"){ %>
  <a href="/profile/remove_photo/" class="btn btn-danger">Remove Photo</a>
  <% } %>
  <br />
  <span>name: <%= data_user.nama %></span><br />
  <span>username: <%= data_user.username %></span><br />
</div>
<br /><br /><br /><br />

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change Photo</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          action="/set_profile/"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <input type="file" name="photo" class="form-control" />
          </div>
          <button class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

